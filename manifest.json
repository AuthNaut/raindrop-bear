{
  "manifest_version": 3,
  "name": "Raindrop Bear",
  "version": "1.92.0",
  "description": "One job, done cute: sync your Raindrop.io collections and bookmarks into your browser’s bookmarks — across devices.",
  "permissions": [
    "tabs",
    "tabGroups",
    "bookmarks",
    "storage",
    "unlimitedStorage",
    "notifications",
    "alarms",
    "contextMenus",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://api.raindrop.io/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.raindrop.io/my/*"
      ],
      "css": [
        "src/contentScript/raindrop.css"
      ]
    }
  ],
  "options_page": "src/options.html",
  "action": {
    "default_title": "Raindrop Bear",
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "commands": {
    "save-to-unsorted": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Save current page to Unsorted"
    }
  }
}
